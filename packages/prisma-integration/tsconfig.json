{
    "compilerOptions": {
        "target": "es2019",
        "lib": [
            "es2019"
        ],
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "composite": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "tests",
        "**/*.test.ts",
        "**/*.config.*",
        "coverage",
        "dist"
    ]
}