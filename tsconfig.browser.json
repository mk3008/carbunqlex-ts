{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "lib": [
            "es2016",
            "dom"
        ],
        "outDir": "dist/esm",
        "declaration": true,
        "declarationDir": "dist/esm/types",
        "moduleResolution": "node",
        "target": "es2016"
    },
    "exclude": [
        "benchmarks",
        "tests",
        "**/*.test.ts",
        "**/*.config.*",
        "coverage",
        "demo",
        "dist"
    ]
}